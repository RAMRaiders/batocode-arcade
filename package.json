{
  "name": "batocode-arcade",
  "description": "A Chromium-based Electron app that runs MakeCode Arcade games in Kiosk mode on Batocera.",
  "author": "RAM Raiders",
  "version": "2.0.2",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/RAMRaiders/batocode-arcade.git"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.ramraiders.batocode-arcade",
    "productName": "BatoCode Arcade",
    "asar": true,
    "files": [
      "src/**/*",
      "package.json",
      "!node_modules/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "tar.gz"
      ],
      "category": "Game",
      "icon": "assets/icon.png"
    }
  }
}
